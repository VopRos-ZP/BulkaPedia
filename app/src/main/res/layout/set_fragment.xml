<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_set"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/empty_head" />

    <ImageView
        android:id="@+id/ivBody"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/empty_body" />

    <ImageView
        android:id="@+id/ivArm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_row="1"
        android:layout_column="0"
        app:srcCompat="@drawable/empty_arm" />

    <ImageView
        android:id="@+id/ivLeg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/empty_leg" />

    <ImageView
        android:id="@+id/ivDecor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_row="2"
        android:layout_column="0"
        app:srcCompat="@drawable/empty_decor" />

    <ImageView
        android:id="@+id/ivDevice"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/empty_device" />
</GridLayout>